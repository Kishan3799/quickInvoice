<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:paddingVertical="8dp"
    android:background="@drawable/custome_item_bg"
    android:elevation="4dp"
    android:id="@+id/customerItemCard"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/tvNameFirstLetter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        tools:text ="K"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="24sp"
        android:background="@drawable/customer_first_letter_bg"
        />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Kishan Verma"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvNameFirstLetter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvContact"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_medium"
        tools:text="+918130905701"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvNameFirstLetter"
        app:layout_constraintTop_toBottomOf="@+id/tvName" />

</androidx.constraintlayout.widget.ConstraintLayout>